<div class="card">
  <div class="card-image">
    <figure class="image">
      <img width="300px" src="{{this.urlToImage}}" alt="" />
    </figure>
  </div>
  <div class="card-content">
    <div class="media">

      <div class="media-content">
        <p class="title is-4">{{this.title}}</p>
        <p class="subtitle is-6">{{this.description}}</p>
        <a href="{{this.url}}" target="_blank">Read More</a>
      </div>
    </div>
  </div>
</div>