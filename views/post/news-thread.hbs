<section class="news-thread">
<h3>Today's News Selection</h3>
<form action="/news/news-search" method="POST">
  <label for="search">Search</label><br>
  <input type="search" name="search" value=""><br>
  <input type="submit" value="Search">
</form>

<section class="news-thread">
<h3>Today's News Selection</h3>

<div class="posts-all"></div>
{{#each article}}

  <div class="card" style="width: 18rem;">
    <img src="{{this.urlToImage}}" class="card-img-top" alt="image" />
    <div class="card-body">
      <h6 class="card-title">{{this.title}}</h6>
      <p class="card-text">{{this.description}}</p>
      <a href="{{this.url}}" class="card-link" target="_blank">Read the full article</a>
       </div>
  </div>

  </div>

{{/each}}

  </div>
</section>
